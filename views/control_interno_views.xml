<!--views/control_interno_views.xml
-->

<odoo>
    <record id="view_costos_gastos_line_tree" model="ir.ui.view">
        <field name="name">costos.gastos.line.tree</field>
        <field name="model">costos.gastos.line</field>
        <field name="arch" type="xml">
            <tree string="Costos y Gastos" editable="bottom" default_order="fecha_comprobante asc">
                <field name="mes" invisible="1"/>
                <field name="factura_xml_id" string="Factura XML"  optional="show"/>
                <field name="orden_compra_id" />
                <field name="fecha_pago" widget="date_anchor_control_month"/>
                <field name="tipo_pago"  optional="show"/>
                <field name="tipo_comprobante"  optional="show"/>
                <field name="folio_fiscal"  optional="show"/>
                <field name="no_comprobante" optional="show"/>
                <field name="fecha_comprobante" optional="show" widget="date_anchor_control_month"/>
                <field name="concepto" optional="show"/>
                <field name="proveedor_text" optional="show"/>
                <field name="tax_id" optional="show"/>
                <field name="country_id" optional="show"/>
                <field name="importe" optional="show"/>
                <field name="descuento" optional="show"/>
                <field name="moneda_id" optional="show"/>
                <field name="tipo_cambio" optional="show"/>
                <field name="importe_mxn" optional="show"/>
                <field name="iva" optional="show"/>
                <field name="total" optional="show"/>
                <field name="retencion_iva" optional="hide"/>
                <field name="otras_retenciones" optional="hide"/>
                <field name="pedimento_no" optional="hide"/>
                <field name="iva_pedimento" optional="hide"/>
                <field name="otros_impuestos_pedimento" optional="hide"/>
                <field name="division_subcuentas" optional="hide"/>
                <field name="importe_subcuenta" optional="hide"/>
                <field name="descuento_subcuenta" optional="hide"/>
                <field name="total_subcuenta_sin_iva"  optional="hide"/>
                <field name="descripcion_cuenta" optional="show"/>
                <field name="cuenta_num" invisible="1"/>
                <field name="cuenta_id" optional="show"/>
                <field name="comentarios_imago" optional="show"/>
                <field name="comentarios_contador" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Vista form de costos.gastos.line -->
    <record id="view_costos_gastos_line_form" model="ir.ui.view">
        <field name="name">costos.gastos.line.form</field>
        <field name="model">costos.gastos.line</field>
        <field name="arch" type="xml">
            <form string="Costo o Gasto">
                
                <sheet>
                    <group>
                        <field name="mes" invisible="1"/>
                        <field name="factura_xml_id" string="Factura XML"/>
                        <field name="orden_compra_id"/>
                        <field name="fecha_pago" widget="date_anchor_control_month"/>
                        <field name="tipo_pago"/>
                        <field name="tipo_comprobante"/>
                        <field name="folio_fiscal"/>
                        <field name="no_comprobante"/>
                        <field name="fecha_comprobante" widget="date_anchor_control_month"/>
                        <field name="concepto"/>
                        <field name="proveedor_text"/>
                        <field name="proveedor_id" hidden="true"/>
                        <field name="tax_id"/>
                        <field name="country_id"/>
                    </group>
                    <group>
                        <field name="importe"/>
                        <field name="descuento"/>
                        <field name="moneda_id"/>
                        <field name="tipo_cambio"/>
                        <field name="importe_mxn"/>
                        <field name="iva"/>
                        <field name="total"/>
                        <field name="retencion_iva"/>
                        <field name="otras_retenciones"/>
                    </group>
                    <group>
                        <field name="pedimento_no"/>
                        <field name="iva_pedimento"/>
                        <field name="otros_impuestos_pedimento"/>
                        <field name="division_subcuentas"/>
                        <field name="importe_subcuenta"/>
                        <field name="descuento_subcuenta"/>
                        <field name="total_subcuenta_sin_iva"/>
                    </group>
                    <group>
                        <field name="descripcion_cuenta"/>
                        <field name="cuenta_id"/>
                        <field name="comentarios_imago"/>
                        <field name="comentarios_contador"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <!-- Vista de control.interno.mensual corregida -->
    <record id="view_control_interno_mensual_form" model="ir.ui.view">
        <field name="name">control.interno.mensual.form</field>
        <field name="model">control.interno.mensual</field>
        <field name="arch" type="xml">
            <form string="Control Interno Mensual">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="mes"/>
                    </group>
                    <notebook>
                        <page string="Costos y Gastos">
                            <field name="costos_gastos_ids" 
                                context="{
                                    'default_control_interno_id': id,}"
                                mode="tree,form">
                                <views>
                                    <view ref="view_costos_gastos_line_tree" type="tree"/>
                                    <view ref="view_costos_gastos_line_form" type="form"/>
                                </views>
                            </field>
                        </page>
                        <page string="Ingresos">
                            <!-- Definir vista de ingresos si es necesario -->
                        </page>
                    </notebook>
                    <footer>
                        <button name="cargar_datos_desde_xml" type="object" string="Cargar datos desde facturas del mes (XML)" class="btn-primary"/>
                        <button name="action_import_csv" type="object" string="Importar desde CSV" class="btn-secondary"/>
                        <button name="action_export_csv" type="object" string="Exportar a CSV" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_costos_gastos_line_search" model="ir.ui.view">
        <field name="name">costos.gastos.line.search</field>
        <field name="model">costos.gastos.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="fecha_pago"/>
                <field name="fecha_comprobante"/>
                <field name="control_interno_id"/>
                <filter string="Fecha de Pago" name="filter_fecha_pago" domain="[]" context="{'group_by':'fecha_pago'}"/>
                <filter string="Fecha de Comprobante" name="filter_fecha_comprobante" domain="[]" context="{'group_by':'fecha_comprobante'}"/>
                <filter string="Control Interno" name="filter_control_interno" domain="[]" context="{'group_by':'control_interno_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_costos_gastos_line_all" model="ir.actions.act_window">
        <field name="name">LÃ­neas de Costos y Gastos</field>
        <field name="res_model">costos.gastos.line</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_costos_gastos_line_search"/>
    </record>


    <record id="action_control_interno_mensual" model="ir.actions.act_window">
        <field name="name">Control Interno Mensual</field>
        <field name="res_model">control.interno.mensual</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
