<!-- views/control_interno_import_wizard_views.xml -->

<odoo>
    <record id="view_control_interno_import_wizard_form" model="ir.ui.view">
        <field name="name">control.interno.import.wizard.form</field>
        <field name="model">control.interno.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Control Interno desde CSV">
                <group>
                    <field name="csv_file" filename="filename"/>
                </group>
                <footer>
                    <button name="action_import" type="object" string="Importar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
